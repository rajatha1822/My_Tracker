<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Container"
    tools:context="com.example.rajatha.my_tracker.Login">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/ActionBar"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/AppTheme.PopupOverlay">
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/TUserName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:layout_marginStart="123dp"
        android:layout_marginTop="57dp"
        android:gravity="center|center_vertical"
        android:text="User Name"
        android:textColor="@color/ActionBar"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TPassword"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/UserName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:gravity="center|center_vertical"
        android:text="Password"
        android:textColor="@color/ActionBar"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TUserName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/ActionBar" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/UserName"
        android:layout_below="@+id/TPassword"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/ActionBar" />

    <Button
        android:id="@+id/Login1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/TPassword"
        android:layout_below="@+id/Password"
        android:background="@color/ActionBar"
        android:textColor="#FFF"
        android:layout_marginTop="19dp"
        android:text="Login" />

</RelativeLayout>
